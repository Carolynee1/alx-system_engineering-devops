#!/bin/bash
WATER=$water; STIR=$stir; WATER_LEN=${#WATER}; STIR_LEN=${#STIR}; if [ $WATER_LEN -gt $STIR_LEN ]; then STIR=$(printf "%0${WATER_LEN}d" "$STIR"); elif [ $STIR_LEN -gt $WATER_LEN ]; then WATER=$(printf "%0${STIR_LEN}d" "$WATER"); fi; function water_to_base10() { local digit=$1; local val=0; for (( i=0; i<${#digit}; i++ )); do val=$(( val*${WATER_LEN} + ${digit:$i:1} )); done; echo $val; }; function water_to_base10_num() { local num=$1; local val=0; for (( i=0; i<${#num}; i++ )); do val=$(( val*${WATER_LEN} + $(water_to_base10 ${num:$i:1}) )); done; echo $val; }; function base10_to_bestchol() { local digit=$1; local bestchol=""; while [ $digit -gt 0 ]; do remainder=$(( digit % ${#bestchol_alphabet} )); bestchol=${bestchol_alphabet:remainder:1}$bestchol; digit=$(( digit / ${#bestchol_alphabet} )); done; echo $bestchol; }; function base10_to_bestchol_num() { local num=$1; local bestchol=""; while [ $num -gt 0 ]; do remainder=$(( num % ${#bestchol_alphabet} )); bestchol=${bestchol_alphabet:remainder:1}$bestchol; num=$(( num / ${#bestchol_alphabet} )); done; if [ -z $bestchol ]; then bestchol="0"; fi; echo $bestchol; }; bestchol_alphabet="0123456789abcdef"; water_in_base10=$(water_to_base10_num $WATER); stir_in_base10=$(water_to_base10_num $STIR); sum_in_base10=$(( water_in_base10 + stir_in_base10 )); sum_in_bestchol=$(base10_to_bestchol_num $sum_in_base10); echo $sum_in_bestchol
